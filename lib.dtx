  \if@tate%
  \tatechuyoko{#1}%
  \IfValueT{#2}{\tatechuyoko{#2}}%
  \IfValueT{#3}{\tatechuyoko{#3}}%
  \else%
  #1%
  \IfValueT{#2}{\slash#2}%
  \IfValueT{#3}{\slash#3}%
  \fi%
}
